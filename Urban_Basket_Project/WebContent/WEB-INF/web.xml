<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Urban Basket</display-name>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>SignIn</servlet-name>
    <servlet-class>servlets.SignInServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>servlets.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReserverServlet</servlet-name>
    <servlet-class>servlets.ReserverServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PlanningServlet</servlet-name>
    <servlet-class>servlets.PlanningServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignIn</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReserverServlet</servlet-name>
    <url-pattern>/reserver</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PlanningServlet</servlet-name>
    <url-pattern>/planning</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>ConnectedFilter</filter-name>
    <filter-class>filters.ConnectedFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ConnectedFilter</filter-name>
    <url-pattern>/reserver/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ConnectedFilter</filter-name>
    <url-pattern>/planning/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ConnectedFilter</filter-name>
    <url-pattern>/contact/*</url-pattern>
  </filter-mapping>
</web-app>